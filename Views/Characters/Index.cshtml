@model IEnumerable<WitcherKendoEFDemo.Models.Character>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<h2>@ViewBag.BattleWinner</h2>
<p>
    <a asp-action="Create" class="k-button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttackPower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefensePower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttackPower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefensePower)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CharacterID" class="k-button k-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CharacterID" class="k-button">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CharacterID" class="k-button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
