@model WitcherKendoEFDemo.Models.Character

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="CharacterForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="k-textbox" />
                            <span asp-validation-for="Name" class="text-danger k-invalid-msg" data-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AttackPower"></label>
                            <kendo-numerictextbox for="AttackPower" />
                            <span asp-validation-for="AttackPower" class="text-danger k-invalid-msg" data-for="AttackPower"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DefensePower"></label>
                            <kendo-numerictextbox for="DefensePower" />
                            <span asp-validation-for="DefensePower" class="text-danger k-invalid-msg" data-for="DefensePower"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WeaponID"></label>
                            <select asp-for="WeaponID" asp-items="ViewBag.WeaponID"></select>
                        </div>
<div class="form-group">
    <input type="submit" value="Create" class="k-button k-primary" />
</div>
</form>
</div>
</div>

<div>
    <a asp-action="Index" class="k-button">Back to List</a>
</div>

    <script>
        $(document).ready(function () {
            $("#CharacterForm").kendoValidator({
                // You can define your custom rules here:
                //rules: {}
            });
        })
    </script>
